<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="datos.Producto" table="producto">
	
		<id column="idProducto" name="idProducto">
			<generator class="identity"/>
		</id>
		
		<property column="nombre" name="nombre" type="string"/>
		<property column="descripcion" name="descripcion" type="string"/>
		<property column="imagen" name="imagen" type="string"/>
		<property column="habilitado" name="habilitado" type="boolean"/>
		
		<!-- PONER ACA LAS RELACIONES -->
		<one-to-one name="plato" class="datos.Plato"></one-to-one>
		<one-to-one name="bebida" class="datos.Bebida"></one-to-one>
		
		<set name="precioProducto" table="precioProducto" order-by="idPrecioProducto asc" inverse="true" lazy="true" fetch="select">
			<key column="idProducto" not-null="true"/>
			<one-to-many class="datos.PrecioProducto"/>
		</set>
		
	</class>	
</hibernate-mapping>