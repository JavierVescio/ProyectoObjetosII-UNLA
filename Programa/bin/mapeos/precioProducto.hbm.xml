<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="datos.PrecioProducto" table="precioProducto">
	
		<id column="idPrecioProducto" name="idPrecioProducto">
			<generator class="identity"/>
		</id>
		
		<property column="precio" name="precio" type="double"/>
		<property column="fechaCreacion" name="fechaCreacion" type="calendar"/>
		
		<!-- RELACIONES -->
		<many-to-one column="idProducto" name="producto" class="datos.Producto" not-null="true"/>
		
	</class>	
</hibernate-mapping>