<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="datos.Bebida" table="bebida">
	
		<id name="idBebida" column="idBebida">
			<generator class="foreign">
				<param name="property">producto</param>
			</generator>
		</id>
		
		<property column="notas" name="notas" type="string"/>
		
		<!-- PONER ACA LAS RELACIONES -->
		<one-to-one name="producto" class="datos.Producto"></one-to-one>
		
	</class>	
</hibernate-mapping>